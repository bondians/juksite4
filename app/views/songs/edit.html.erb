
<h1> EDITING IS NOT ACTIVE, DO NOT SUBMIT CHANGES </h1>

<h1>Editing song</h1>

<% form_for(@song) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= @song.title %>
  </p>
  <p>
    <%= f.label :track %><br />
    <%= f.text_field :track %>
  </p>
  <p>
    <%= f.label :year %><br />
    <%= f.text_field :year %>
  </p>
  <p>
    <%= f.label :album %><br />
    <%= @song.album.name %>
  </p>
  <p>
    <%= f.label :artist %><br />
    <%= @song.artist.name %>
  </p>
  <p>
    <%= f.label :genre %><br />
    <%= @song.genre.name %>
  </p>
  <p>
    <%= f.label :comments %><br />
    <%= f.text_area :comments %>
  </p>
  <p>
    <%= f.label :size %><br />
    <%= number_to_human_size(@song.size) %>
  </p>
  <p>
    <%= f.label :pre_id %><br />
    <%= f.text_field :pre_id %>
  </p>
  <p>
    <%= f.label :post_id %><br />
    <%= f.text_field :post_id %>
  </p>
  <p>
    <%= f.label :fade_duration %><br />
    <%= f.text_field :fade_duration %>
  </p>
  <p>
    <%= f.label :volume %><br />
    <%= f.text_field :volume %>
  </p>
  <p>
    <%= f.label :fade_in %><br />
    <%= f.check_box :fade_in %>
  </p>
  <p>
    <%= f.label :file %><br />
    <%= @song.file %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @song %> |
<%= link_to 'Back', songs_path %>
