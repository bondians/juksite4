<p>
  <b>Name:</b>
  <%=h @album.name %>
</p>

<p>
  <b>Artists:</b>
    <% @album.artists.each do |artist| %>
      <%=h artist.name%><br />
    <% end %>
  </p>
</p>

<p>
  <b>Genre:</b>
  <%=h @album.genre.name %>
</p>

<p>
  <b>Tracks:</b>
<% if Setting.allow_playlists? %>
  <%= draw_songs(@album.songs.sort, :playlist_sel, :playlist_add, :checkbox, :no_album, :request_button) %>
<% else %>
  <%= draw_songs(@album.songs.sort, :no_album, :request_button) %>
<% end %>
</p>


<%= link_to 'Edit', edit_album_path(@album) %> |
<%= link_to 'Back', albums_path %>
